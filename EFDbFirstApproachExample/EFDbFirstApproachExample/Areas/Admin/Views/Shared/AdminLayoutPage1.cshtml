<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error, .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-info navbar-dark ">
        <a class="navbar-brand" href="#">Admin</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Categories/index">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Brands/index">Brands</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Products/index">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/users/index">Users</a>
                </li>
            </ul>
        </div>
        <div class="text-white">@ViewBag.Message</div>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div>
                Welcome, @User.Identity.Name
            </div>
        }
        @if (User.Identity.IsAuthenticated == true)
        {
            <div>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                </ul>
            </div>
        }

    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>